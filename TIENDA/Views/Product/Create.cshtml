@model Product

@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="max-w-4xl mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-light text-gray-800">Nuevo Producto</h1>
        <a asp-action="Index" class="text-sm font-light text-gray-600 hover:text-gray-800">Volver al listado</a>
    </div>

    <div class="bg-white rounded-xl shadow-xs border border-gray-100 p-6">
        <form asp-controller="Product" asp-action="Create" method="post">

            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-light text-gray-700 mb-1">Nombre</label>
                    <input asp-for="Name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="CategoryId" class="block text-sm font-light text-gray-700 mb-1">Categoría</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" required>
                        <option value="">-- Seleccione una categoría --</option>
                    </select>

                    <span asp-validation-for="CategoryId" class="text-red-500 text-xs"></span>
                </div>


                <div>
                    <label asp-for="Price" class="block text-sm font-light text-gray-700 mb-1">Precio</label>
                    <input asp-for="Price" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Price" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Origin" class="block text-sm font-light text-gray-700 mb-1">Origen</label>
                    <input asp-for="Origin" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Origin" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Rating" class="block text-sm font-light text-gray-700 mb-1">Calificación</label>
                    <input asp-for="Rating" type="number" step="0.1" min="0" max="5" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Rating" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Reviews" class="block text-sm font-light text-gray-700 mb-1">Número de Reseñas</label>
                    <input asp-for="Reviews" type="number" min="0"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"/>
                    <span asp-validation-for="Reviews" class="text-red-500 text-xs"></span>
                </div>

                <div class="flex items-center">
                    <input asp-for="InStock" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                    <label asp-for="InStock" class="ml-2 block text-sm font-light text-gray-700">En Stock</label>
                </div>

                <div class="flex items-center">
                    <input asp-for="Organic" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                    <label asp-for="Organic" class="ml-2 block text-sm font-light text-gray-700">Orgánico</label>
                </div>


                <div class="md:col-span-2">
                    <label asp-for="Description" class="block text-sm font-light text-gray-700 mb-1">Descripción</label>
                    <textarea asp-for="Description" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="mt-8 flex justify-end space-x-4">
                <a asp-action="Index" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                    Cancelar
                </a>
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                    Guardar Producto
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}