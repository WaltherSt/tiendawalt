
@model TIENDA.Models.Customer

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="max-w-2xl mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-light text-gray-800">Eliminar Cliente</h1>
        <a asp-action="Index" class="text-sm font-light text-gray-600 hover:text-gray-800">Volver al listado</a>
    </div>

    <div class="bg-white rounded-xl shadow-xs border border-gray-100 p-6">
        <h3 class="text-lg font-light text-gray-800 mb-4">¿Estás seguro que deseas eliminar este cliente?</h3>
        
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-light text-gray-700 mb-1">Nombre</label>
                <p class="text-gray-900">@Model.FirstName @Model.LastName</p>
            </div>
            
            <div>
                <label class="block text-sm font-light text-gray-700 mb-1">Email</label>
                <p class="text-gray-900">@Model.Email</p>
            </div>
            
            <div>
                <label class="block text-sm font-light text-gray-700 mb-1">Teléfono</label>
                <p class="text-gray-900">@Model.PhoneNumber</p>
            </div>

            <div>
                <label class="block text-sm font-light text-gray-700 mb-1">Dirección</label>
                <p class="text-gray-900">@Model.Address, @Model.City, @Model.Country, @Model.PostalCode</p>
            </div>
            
            <div>
                <label class="block text-sm font-light text-gray-700 mb-1">Fecha de Registro</label>
                <p class="text-gray-900">@Model.RegistrationDate.ToShortDateString()</p>
            </div>
        </div>

        <form asp-action="Delete" class="mt-8">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-end space-x-4">
                <a asp-action="Index" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                    Cancelar
                </a>
                <button type="submit" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                    Confirmar Eliminación
                </button>
            </div>
        </form>
    </div>
</div>
