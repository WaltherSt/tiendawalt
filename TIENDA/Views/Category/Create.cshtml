
@model TIENDA.Models.Category

@{
    ViewData["Title"] = "Nueva Categoría";
}

<div class="max-w-4xl mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-light text-gray-800">Nueva Categoría</h1>
        <a asp-action="Index" class="text-sm font-light text-gray-600 hover:text-gray-800">Volver al listado</a>
    </div>

    <div class="bg-white rounded-xl shadow-xs border border-gray-100 p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-light text-gray-700 mb-1">Nombre</label>
                    <input asp-for="Name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                </div>
                
                <div>
                    <label asp-for="Color" class="block text-sm font-light text-gray-700 mb-1">Color</label>
                    <input asp-for="Color" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Color" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Image" class="block text-sm font-light text-gray-700 mb-1">URL de Imagen</label>
                    <input asp-for="Image" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Image" class="text-red-500 text-xs"></span>
                </div>

                <div class="md:col-span-2">
                    <label asp-for="Description" class="block text-sm font-light text-gray-700 mb-1">Descripción</label>
                    <textarea asp-for="Description" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="mt-8 flex justify-end space-x-4">
                <a asp-action="Index" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                    Cancelar
                </a>
                <button type="submit" class="px-6 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                    Guardar Categoría
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
