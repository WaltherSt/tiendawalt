
@model TIENDA.Models.Order

@{
    ViewData["Title"] = "Nuevo Pedido";
}

<div class="max-w-4xl mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-light text-gray-800">Nuevo Pedido</h1>
        <a asp-action="Index" class="text-sm font-light text-gray-600 hover:text-gray-800">Volver al listado</a>
    </div>

    <div class="bg-white rounded-xl shadow-xs border border-gray-100 p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="CustomerId" class="block text-sm font-light text-gray-700 mb-1"></label>
                    <select asp-for="CustomerId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" asp-items="ViewBag.CustomerId">
                        <option value="">-- Seleccione un Cliente --</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-red-500 text-xs"></span>
                </div>
                
                <div>
                    <label asp-for="TotalAmount" class="block text-sm font-light text-gray-700 mb-1"></label>
                    <input asp-for="TotalAmount" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="TotalAmount" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Status" class="block text-sm font-light text-gray-700 mb-1"></label>
                    <input asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Status" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="mt-8 flex justify-end space-x-4">
                <a asp-action="Index" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                    Cancelar
                </a>
                <button type="submit" class="px-6 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                    Guardar Pedido
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
