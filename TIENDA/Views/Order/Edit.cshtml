
@model TIENDA.Models.Order

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="max-w-4xl mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-light text-gray-800">Editar Pedido</h1>
        <a asp-action="Index" class="text-sm font-light text-gray-600 hover:text-gray-800 flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver al listado
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-xs border border-gray-100 p-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OrderDate" />
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-6 bg-red-50 p-3 rounded-lg"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="CustomerId" class="block text-sm font-light text-gray-700 mb-1"></label>
                    <select asp-for="CustomerId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" asp-items="ViewBag.CustomerId"></select>
                    <span asp-validation-for="CustomerId" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                
                <div>
                    <label asp-for="TotalAmount" class="block text-sm font-light text-gray-700 mb-1"></label>
                    <input asp-for="TotalAmount" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="TotalAmount" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Status" class="block text-sm font-light text-gray-700 mb-1"></label>
                    <input asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Status" class="text-red-500 text-xs mt-1 block"></span>
                </div>
            </div>

            <div class="mt-8 pt-6 border-t border-gray-200 flex justify-between">
                <button type="submit" class="px-6 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Guardar Cambios
                </button>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="px-6 py-2 bg-red-50 text-red-700 rounded-lg hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Eliminar Pedido
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
